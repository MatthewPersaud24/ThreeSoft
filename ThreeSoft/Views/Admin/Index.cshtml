@model ThreeSoft.Controllers.AdminIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1 style ="margin-bottom: 20px;">Hello Admin</h1>

<section class="section">
    <div class="container">

        <h2 class="subtitle">All Users</h2>
        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td>
                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="button is-danger is-small">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h2 class="subtitle">All Teachers</h2>
        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model.Teachers)
                {
                    <tr>
                        <td>@teacher.FirstName</td>
                        <td>@teacher.LastName</td>
                        <td>@teacher.UserName</td>
                        <td>
                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@teacher.Id" />
                                <button type="submit" class="button is-danger is-small">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h2 class="subtitle">All Students</h2>
        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.UserName</td>
                        <td>
                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@student.Id" />
                                <button type="submit" class="button is-danger is-small">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
